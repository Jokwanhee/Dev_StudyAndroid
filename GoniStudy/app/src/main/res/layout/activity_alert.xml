<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Alert.AlertActivity">

        <Button
            android:id="@+id/alert_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alertdialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/alert_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alertdialog2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_btn"/>

        <Button
            android:id="@+id/alert_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alertdialog3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_btn2"/>

        <Button
            android:id="@+id/alert_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alertdialog4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_btn3"/>

        <Button
            android:id="@+id/alert_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alertdialog5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_btn4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
