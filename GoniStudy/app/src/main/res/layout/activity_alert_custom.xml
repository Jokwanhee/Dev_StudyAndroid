<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/apple_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사과"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/apple_edit_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="사과의 가격을 입력하세요."
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/apple_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/orange_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오렌지"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/apple_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.55"/>

    <EditText
        android:id="@+id/orange_edit_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="오렌지의 가격을 입력하세요."
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/orange_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>